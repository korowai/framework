{
    "name": "korowai/framework",
    "description": "Framework for Korowai project",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "PaweÅ‚ Tomulik",
            "email": "ptomulik@meil.pw.edu.pl"
        }
    ],
    "suport": {
      "issues": "https://github.com/korowai/framework/issues",
      "source": "https://github.com/korowai/framework"
    },
    "repositories": [
      { "type": "path", "url": "packages/*", "options": {"symlink": true} }
    ],
    "require": {
        "php": ">=7.1.3",
        "korowai/ldaplib": "*",
        "korowai/basiclib" : "*",
        "korowai/contextlib" : "*",
        "korowai/errorlib" : "*"
    },
    "require-dev": {
        "phpunit/phpunit": ">=7.5.16",
        "php-mock/php-mock-phpunit": ">=2.4.0",
        "phake/phake": "^3.0",
        "behat/behat": "^3.4",
        "symfony/filesystem": ">=4.2",
        "symfony/finder": ">=4.2",
        "laravel/lumen-framework": ">=5.8",
        "laravel/tinker": ">=1.0.8",
        "zendframework/zend-ldap": "*"
    },
    "autoload": {
      "psr-4" : {
      },
      "files" : [
      ],
      "exclude-from-classmap": [
        "src/**/Tests/",
        "src/**/Behat/"
      ]
    },
    "autoload-dev": {
      "psr-4" : {
        "Korowai\\Docs\\Behat\\":  "docs/sphinx/Behat/",
        "Korowai\\Lib\\Basic\\Tests\\" : "packages/basiclib/Tests/",
        "Korowai\\Lib\\Context\\Tests\\" : "packages/contextlib/Tests/",
        "Korowai\\Lib\\Error\\Tests\\" : "packages/errorlib/Tests/",
        "Korowai\\Lib\\Ldap\\Tests\\" : "packages/ldaplib/Tests/",
        "Korowai\\Lib\\Ldap\\Behat\\":  "packages/ldaplib/Behat/"
      }
    }
}
