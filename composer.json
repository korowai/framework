{
    "name": "korowai/framework",
    "description": "Framework for Korowai project",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Pawe≈Ç Tomulik",
            "email": "ptomulik@meil.pw.edu.pl"
        }
    ],
    "require": {
        "php": "^7.0",
        "symfony/options-resolver": "^3.3"
    },
    "replace": {
      "korowai/ldap": "self.version",
      "korowai/ldap-service": "self.version"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "php-mock/php-mock-phpunit": "^2.0.1",
        "phake/phake": "^3.0",
        "behat/behat": "^3.4",
        "symfony/filesystem": "^3.3",
        "symfony/finder": "^3.3"
    },
    "autoload": {
      "psr-4" : {
        "Korowai\\Component\\" : "src/Korowai/Component/",
        "Korowai\\Framework\\" : "src/Korowai/Framework/"
      },
      "exclude-from-classmap": [
        "**/Tests/"
      ]
    }
}
