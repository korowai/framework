{
    "name": "korowai/errorlib",
    "description": "A library of utilities for error handling",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "support": {
      "issues": "https://github.com/korowai/framework/issues",
      "source": "https://github.com/korowai/framework"
    },
    "authors": [
        {
            "name": "PaweÅ‚ Tomulik",
            "email": "ptomulik@meil.pw.edu.pl"
        }
    ],
    "require": {
        "php": ">=7.4",
        "korowai/errorlib-interfaces": "*",
        "korowai/contextlib": "*"
    },
    "require-dev": {
        "phpunit/phpunit": ">=9.3",
        "php-mock/php-mock-phpunit": ">=2.4.0",
        "korowai/testing": "*"
    },
    "autoload": {
      "psr-4" : {
        "Korowai\\Lib\\Error\\" : "src/",
        "Korowai\\Testing\\Errorlib\\" : "testing/"
      },
      "files" : [
        "src/functions.php"
      ],
      "exclude-from-classmap": [
        "/tests/",
        "/testing/"
      ]
    },
    "autoload-dev": {
      "psr-4" : {
        "Korowai\\Tests\\Lib\\Error\\" : "tests/",
        "Korowai\\Tests\\Testing\\Errorlib\\" : "tests/testing/"
      }
    }
}
